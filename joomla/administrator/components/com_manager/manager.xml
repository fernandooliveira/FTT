<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6.0" method="upgrade">
	<name>manager</name>
	<!-- The following elements are optional and free of formatting conttraints -->
	<creationDate></creationDate>
	<author></author>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<copyright>Â© 2011</copyright>
	<license></license>
	<!--  The version string is recorded in the components table -->
	<version></version>
	<!-- The description is optional and defaults to the name -->
	<description></description>

	<!-- Runs on install/uninstall/update; New in 1.6 -->
	<scriptfile>install.php</scriptfile>

	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>manager.php</filename>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<folder>codebase</folder>
		<folder>icons</folder>
		<folder>imgs</folder>
		<folder>js</folder>
		<folder>media</folder>
		<folder>models</folder>
		<folder>modules</folder>
		<folder>php</folder>
		<folder>tpl</folder>
		<folder>views</folder>	
		<folder>language</folder>
	</files>
	<languages folder="site">
			<language tag="en-GB">language/en-GB/en-GB.com_manager.ini</language>
	</languages>
	<administration> 
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>controller.php</filename>
			<filename>manager.php</filename>
			<filename>toolbar.manager.php</filename>
			<filename>toolbar.manager.html.php</filename>
			<!-- dhtmlx files section -->
			<folder>codebase</folder>
			<!-- js files section -->
			<folder>js</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- tables files section -->
			<folder>tables</folder>
			<!-- views files section -->
			<folder>views</folder>			
		</files>
	</administration>
	 <modules>
	       <module folder="modules" module="mod_jmb_header" name="JMB Header" />
	 </modules>
	<plugins>
	       <plugin folder="plugins/extension" plugin="jmbplugin" name="JMBPlugin" group="extension" />
	 </plugins>
</extension>
