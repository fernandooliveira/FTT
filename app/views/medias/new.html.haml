%h1 Upload new file

- form_tag medias_path, :multipart => true do
  
  %div
    = select_tag :type, options_for_select([["Widget", "Medias::Widget"], ["Image", "Medias::Image"], ["Video", "Medias::Video"], ["Thumbnail", "Medias::Thumbnail"] ]) 
    = file_field_tag :file
  
  %div
    = submit_tag "Upload"

= link_to t('back'), :back