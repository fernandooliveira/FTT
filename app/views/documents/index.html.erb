<ul id="documents" class="document_list">
  <% @documents.each do |document| -%>
    <li id="document_<%= document.id %>"><h2><%= document.title%></h2><%= link_to image_tag(document.pages.first.thumbnail_url()), document_path(document) %>
      <%= button_to 'Remove', document_path(document), :method => :delete, :confirm => 'Document will be removed from WEB access. Are you sure?' %>
    </li>
  <% end -%>
</ul>