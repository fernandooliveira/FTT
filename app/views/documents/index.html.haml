#header
  #ub-login-logout
    %div
      - if current_user
        = current_user.name + ' - ' + current_user.email
        |
        = link_to "edit", edit_user_path(current_user)
        |
        = link_to "logout", logout_path
      - else
        = link_to "login", login_path
        |
        = link_to "signup", signup_path
  = render :partial => "layouts/flash", :object => flash

.ui-widget
  #wb-document-header
    %button#wb-create-document-button.ui-button.ui-state-default.ui-corner-all= t('button.new_document')

  #wb-document-navigation.wb-navigation
    #wb-document-navigation-title.wb-navigation-title= t('label.documents')
    %div=t('label.all_items')
    %div
      %a#wb-document-filter-date{ :href => "#by_date"}= t('label.by_date')
  #wb-document-list-container

#wb-new-document-dialog{ :title => t('label.create_new_document') }
  %form{ :action => ""}
    %fieldset
      %label{ :for => "name" }= t "label.name"
      %br
      %input#wb-new-document-name.ui-corner-all{ :type => "text", :name => "wb-new-document-name", :style => "width:100%"}
      %br
      %label{ :for => "creationDate" }= t "label.creationDate"
      %br
      %input#wb-new-document-creationDate.ui-corner-all{ :disabled => "true", :type => "text", :name => "wb-new-document-creationDate", :style => "width:100%"}

#wb-edit-document-dialog{ :title => t('label.edit_document') }
  %form{ :action => ""}
    %fieldset
      %label{ :for => "name" }= t "label.name"
      %br
      %input#wb-edit-document-name.ui-corner-all{ :type => "text", :name => "wb-edit-document-name", :style => "width:100%"}
      %br
      %label{ :for => "creationDate" }= t "label.creationDate"
      %br
      %input#wb-edit-document-creationDate.ui-corner-all{ :disabled => "true", :type => "text", :name => "wb-edit-document-creationDate", :style => "width:100%"}      

