<div id="html-inspector" class="inspector">
  <div class="head">
    <div>
      <div class="inspector-title">
        HTML
      </div>
    </div>
  </div>
  
  <div class="foot">
    <form id="properties" class="properties">
      <div>
        <label for="property-width">width</label>
        <input id="property-width" type="text" data-type="cssvalue" value="px" />
      </div>
      <div>
        <label for="property-height">height</label>
        <input id="property-height" type="text" data-type="cssvalue" value="px" />
      </div>
      <div>
        <label for="property-left">left</label>
        <input id="property-left" type="text" data-type="cssvalue" value="px" />
      </div>
      <div>
        <label for="property-top">top</label>
        <input id="property-top" type="text" data-type="cssvalue" value="px" />
      </div>
      <!--div>
        <label for="property-right">right</label>
        <input id="property-right" type="text" data-type="cssvalue" value="px" />
      </div>
      <div>
        <label for="property-bottom">bottom</label>
        <input id="property-bottom" type="text" data-type="cssvalue" value="px" />
      </div-->
      <div>
        <label for="property-scroll">Show Scroll</label>
        <input id="property-scroll" type="checkbox" value="checked" />
      </div>
      <div>
        <label for="property-opacity">Opacity</label>
        <input id="property-opacity" type="range" min="0.00" max="1.00" step="0.01" value="1.00" />
        <span class="input-range-readout" id="property-opacity-readout">ui</span>
      </div>
      <div>
        <input id="property-fit-to-screen" type="button" value="Fit to screen" />
      </div>
    </form>
  </div> 
  <div class="content" id="html-editor">
  </div>
</div>