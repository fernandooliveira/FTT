<div id="image-inspector" style="display:none">
  <div class="head">
    <div>
      <div class="inspector-title">Image</div>
    </div>
  </div>    
  <div>
    <form class="content">
      <div class="section">
        <div class="entry">
          <label>
            Image URL              
            <input type="text" id="property_src" />
          </label>
        </div>
        <div class="entry">
          <label>
            Original size
            <input type="button" value="Original size" id="restore_original_size" />
          </label>
        </div>        
        <div class="entry">
          <label>
            Set as page
            <input type="button" value="Set" id="set_page_size_to_image_size" />
          </label>
        </div>
        <div class="entry">
          <label>
            <input type="checkbox" id="preserve_aspect_ratio" checked="checked" />
            Preserve aspect ratio
          </label>
        </div>    
       <div class="entry">
          <label class="properties_label">Set as page</label>
          <input type="button" value="Set" id="set_page_size_to_image_size" />
        </div>
        
        <div class="entry">
          <label>Preserve aspect ratio</label>
          <input type="checkbox" id="preserve_aspect_ratio" checked="checked" />
        </div>

        <div class="entry">
          <label>Placeholder</label>
          <input type="checkbox" id="placeholder_checkbox" checked="checked" />
        </div>

        <div class="entry">
          <label>&nbsp;</label>
          <a href="#create_image_link">Create link</a>
        </div>

        <div class="entry">
          <label>&nbsp;</label>
          <a href="#clear_image_link">Clear link</a>
        </div>  
        <div class="entry">
          <div>
            <a href="#add_to_my_images">Add to my images</a>
          </div>
          <div id="add_to_my_images_result"></div>
        </div>                             
      </div>
      <hr class="separator"/>
      <div class="section">
        <div class="entry">
          <label>
            Zoom<input type="range" id="image_zoom" min="0" max="400" step="1" />
          </label>
        </div>
        <div class="entry">
          <label>
            X Shift
          </label>
          <input type="range" id="image_xshift" min="0" max="400" step="1" />          
        </div>
        <div class="entry">
          <label>
            Y Shift
            <input type="range" id="image_yshift" min="0" max="400" step="1" />
          </label>
        </div>                    
      </div>
      <hr class="separator"/>      
      <div id="image_properties" class="section">
        <div class="entry">
          <label>
            left              
            <input id="property_left" type="text" data-type="cssvalue" data-property="left" value="" />
          </label>
        </div>
        <div class="entry">
          <label>
            top              
            <input id="property_top" type="text" data-type="cssvalue" data-property="top" value="" />
          </label>
        </div>         
        <div class="entry">
          <label>
            width              
            <input id="property_width" type="text" data-type="cssvalue" data-property="width" value="" />
          </label>
        </div>
        <div class="entry">
          <label>
            height              
            <input id="property_height" type="text" data-type="cssvalue" data-property="height" value="" />
          </label>
        </div>
        <div class="entry">
          <label>
            rotation              
            <input id="property_rotation" type="text" data-type="cssangle" data-property="rotation" value="" />
          </label>
        </div> 
        <div class="entry">
          <label>
            opaciy              
            <input id="property_opacity" type="range" min="0.00" max="1.00" step="0.01" data-property="opacity" value="1.00" /><span class="readout" id="property_opacity_readout">ui</span>
          </label>
        </div> 
        <div class="entry">
          <label>              
            <input id="property-fit-to-screen" type="button" value="Fit to webdoc" />
          </label>
        </div>                                                                                                
      </div>              
    </form>    
  </div>
</div>