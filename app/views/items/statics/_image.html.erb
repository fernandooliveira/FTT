<% style = 'width: 100%; height: 100%; top: 0%; left: 0%;' %>
<% if item.data['css']['overflow'] %>
  <% style += "overflow:#{item.data['css']['overflow']};" %>
<% end %>

<div class='item image_item layer' style='<%= 'overflow:hidden;' %>'>
  <img src='<%= item.data['src'] %>' alt='<%= item.data['title'] %>' style='<%= style %>'/>
</div>