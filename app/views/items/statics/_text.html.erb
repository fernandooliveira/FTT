<% style ||= '' %>
<% if item.data['style'] && item.data['style']['font_face']%>
  <% font_face = item.data['style']['font_face'] %>
  <% style += item.data['style']['font'] %>
<% end %>

<% if item.data['css']['overflow'] %>
  <% style += "overflow:#{item.data['css']['overflow']};" %>
<% end %>

<div class='item layer' style="<%= style %>">
  <%= raw update_text_to_be_xhtml_valid(item.inner_html) %>
</div>
