%h1=t '.title'

= error_messages_for :user_session
- form_for @user_session do |f|
  %div
    = f.label :email
    = f.text_field :email
  %div
    = f.label :password
    = f.password_field :password
  %div
    = f.check_box :remember_me
    = f.label :remember_me
  %div
    = f.submit t('.button')

%p= link_to t('.signup_link'), signup_path
