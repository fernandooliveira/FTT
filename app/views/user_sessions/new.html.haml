- external_box_title t (".title")
= error_messages_for :user_session
- form_for @user_session do |f|
  %div.clearfix
    = f.label :email
    = f.text_field :email
  %div.clearfix
    = f.label :password
    = f.password_field :password
  %div#remember_me.clearfix
    = f.check_box :remember_me
    = f.label :remember_me
  %div.clearfix
    = f.submit t('.button')

/ %p= link_to t('.signup_link'), signup_path