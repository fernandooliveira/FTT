%html( xmlns:ub="#{XML_UNIBOARD_DOCUMENT_NAMESPACE}" xmlns="http://www.w3.org/1999/xhtml" xmlns:svg="http://www.w3.org/2000/svg" )
  %head
    %meta{ "http-equiv" => "Content-Type", :content => "application/xhtml+xml; charset=utf-8"}
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "chrome=1"}
    %title= "MyUniboard (#{I18n.locale}) - #{yield(:title)}"
    = stylesheet_link_tag 'reset'
    = stylesheet_link_tag 'jquery-ui-1.7.2.custom'
    = stylesheet_link_tag 'general'
    = stylesheet_link_tag 'style'        
    = stylesheet_link_tag 'library'
    = javascript_include_tag 'jquery'
    = stylesheet_link_tag 'lib/protect'
    = stylesheet_link_tag 'lib/index'
    = stylesheet_link_tag 'lib/layer'
    


  %body
    #wrap
      = yield
    = javascript_include_tag 'jquery-json'
    = javascript_include_tag 'jquery-string'
    = javascript_include_tag 'jquery-ui'
    
    = javascript_include_tag 'jquery.extensions'
    
    = javascript_include_tag 'lowpro-jquery'
    = javascript_include_tag '../swfupload/swfupload.js'
    = javascript_include_tag 'jquery-swfupload'
    = javascript_include_tag 'sylvester'
    = javascript_include_tag 'strophe'    
    = sprockets_include_tag      
    = render :partial => "layouts/googleAnalytics"