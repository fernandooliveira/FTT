<%= include_stylesheets :feedback, :media => 'all' %>
<script type="text/javascript">
  // Initialises the zendesk feedback widget

  var zenbox_params = {};
  zenbox_params.tab_id = "feedback";
  zenbox_params.tab_color = "#646d73";
  zenbox_params.title = "Help us to improve webdoc";
  zenbox_params.text = "Please let us know what you think about webdoc. All comments, suggestions, bug reports or missing features are welcome.";
  zenbox_params.tag = "dropbox webdoc.com";
  zenbox_params.url = "webdoc.zendesk.com";
  <% if current_user %>
  zenbox_params.email = "<%= current_user.email %>";
  <% end %>
</script>
<script type="text/javascript" src="http://assets0.zendesk.com/external/zenbox/overlay.js"></script>