%h1 Categories Listing

= render :partial => 'layouts/flash'

%ul
  - @categories.each do |category|
    %li
      = "#{category.name}"
      |
      = link_to t('edit'), edit_admin_category_path(category)
      = link_to t('destroy'), admin_category_path(category), :confirm => I18n.t('alert.destroy_confirmation'), :method => :delete

= link_to "add a category", new_admin_category_path
