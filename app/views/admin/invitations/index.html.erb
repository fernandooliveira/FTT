<h1>Invitations</h1>
<div>
  <%= link_to 'Invite people', new_admin_invitation_path %>
</div>
<ul id="invitations_list">
  <% @invitations.each do |invitation| %>
    <li>
      <div class="invitation_container">
        <span class="invitation_from">
          <%= invitation.user.username %>
        </span>
        <span class="invitation_to">
          <%= invitation.email %>
        </span>
        <span class="invitation_official">
          <%= invitation.official ? 'yes' : 'no' %>
        </span>
        <span class="invitation_status">
          <%= invitation.status %>
        </span>
        <span class="invitation_controls">
          <%= link_to t('destroy'), admin_invitation_path(invitation), :confirm => 'Are you sure ?', :method => :delete %>
        </span>
      </div>
    </li>
  <% end %>
</ul>
