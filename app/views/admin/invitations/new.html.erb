<h1>Invitations - Invite people</h1>

<%= form_for @invitation, :url => admin_invitations_path do |f| %>
  <div>
    <%= label_tag 'invitation[message]', 'Personnal message'%>
    <%=  text_area_tag 'invitation[message]'%>
  </div>
  <div>
    <%= label_tag 'emails[]', 'Emails :'%>
    <%= text_field_tag 'invitation[email][]'%>
  </div>
  <div>
    <%= f.submit 'Invite !' %>
  </div>
<% end %>

<%= link_to t('back'), admin_invitations_path %>
