%h2=t '.title'

- semantic_form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f|
  - f.inputs do
    = f.input :email, :required => false
    = f.input :password, :hint => true, :required => false
    = f.input :current_password, :hint => true, :required => true

  - f.buttons do
    = f.commit_button

%h3=t '.cancel.title'
%p
  =t '.cancel.text'
  = button_to t('.cancel.link'), registration_path(resource_name), :confirm => t('confirm'), :method => :delete

= render "shared/devise_links"
