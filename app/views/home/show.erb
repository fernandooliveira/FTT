<div class="action-bar bar">
  <div class="wrap clear">
    <h2>Log in</h2>
    <form action="<%= session_path(@user) %>" method="post">
      
      <input name="authenticity_token" type="hidden" value="<%= protect_against_forgery? ? form_authenticity_token : '' %>" />
      
      <fieldset>
        <div class="stack column one of-four">
          <label for="user_<%= :email %>">Email</label>
          <input id="user_<%= :email %>" name="user[<%= :email %>]" size="30" type="text" />
        </div>
        <div class="stack column two of-four">
          <label for="user_<%= :password %>">Password</label>
          <input id="user_<%= :password %>" name="user[<%= :password %>]" size="30" type="password" />
        </div>
      </fieldset>
      
      <fieldset>
        <div>
          <input name="login" type="submit" value="Login">
          <label for="<%= :remember_me %>">
            <input id="user_<%= :remember_me %>" name="user[<%= :remember_me %>]" type="checkbox" value="1" />
            Remember me
          </label>
        </div>
      </fieldset>
    
    </form>
  </div>
</div>

<div>
  <div class="wrap clear">
    <%= render "shared/devise_links" %>
  </div>
</div>

